<div class="card-product" id="demoObject">
  <img src=" <%= asset_url("show_card_banner.jpg") %>" alt="castle">
  <div class="card-product-infos">
    <% if @wizard.photo.attached? %>
      <img id="demoObject" src= <%= cl_image_path(@wizard.photo.key) %>>
    <% end %>
    <div class="text">   
      <h1><%= @wizard.name %><br></h1>
      <p><i class="fas fa-eye"></i> <%= @wizard.eye_color %><br></p>
      <p>Hair colour: <%= @wizard.hair_color %><br></p>
      <p><i class="fas fa-home-lg-alt"></i> <%= @wizard.house %><br></p>
      <p><i class="fas fa-coins"></i> <%= @wizard.price %>.-<br></p>
      <p>species: <%= @wizard.species %><br></p>
      <h6>Description</h6>
      <p style="max-width: 600px;"><%= @wizard.description %><br></p>
    </div>
  </div>
</div>

<% if current_user == @wizard.user %>
  <div class="d-flex justify-content-between my-4">
    <%= link_to 'Edit', edit_wizard_path(@wizard), class:"btn btn-ghost mr-0" %>
    <%= link_to 'Destroy', @wizard, class:"btn btn-ghost mr-0", method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
<% else %>
  <div class="d-flex justify-content-center my-4">
    <%= link_to 'Book this wizard', new_wizard_order_path(@wizard), class:"btn btn-ghost mr-0"%>
  </div>
<% end %>

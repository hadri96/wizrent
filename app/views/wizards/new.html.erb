<div class="container">
  <h1>Create a new wizard</h1>
  <%= simple_form_for @wizard do |f| %>
    <%= f.input :name %>
    <%= f.input :eye_color %>
    <%= f.input :hair_color %>
    <%= f.input :house %>
    <%= f.input :price %>
    <%= f.input :picture_url %>
    <%= f.input :description %>
    <%= f.input :species %>
    <div class="button">
    <%= f.submit class: 'btn btn-ghost' %> | <%= link_to 'Back', wizards_path %>
    </div>
  <% end %>
</div>




<div class="container">
  <div class="col-12 col-sm-8 col-md-4 offset-sm-2 offset-md-4 w-50 log-form">
    <h1 class="toto"> Book <%= @wizard.name %></h1>
    <%= simple_form_for [ @wizard, @order ] do |f| %>
      <%= f.input :start_date %>
      <p style="color:transparent; font-size:smaller;" id='start-date-tag'>empty</p>
      <%= f.input :end_date %>
      <p style="color:transparent; font-size:small-xx;" id='end-date-tag'>*Please enter valid dates!</p>
      <%= f.input :amount, :as => :hidden, :input_html => { :value => @wizard.price } %>
      <h4 id="total" >Total : <%= @wizard.price %> CHF</h3>
      <div class="d-flex justify-content-between my-4">
        <%= f.submit class: 'btn btn-ghost ml-0' %>
        <%= link_to 'Back', wizards_path, class:"btn btn-ghost mr-0"%>
      </div>
    <% end %>
  </div>
</div>
